<section className="hero">
    <div className="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
        <div className="hero-text mr-auto place-self-center lg:col-span-7 md:ml-4">
            <p className="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl text-Hero-text">{{ config.HERO.title }}</p>
            <p className="max-w-2xl mb-4 md:text-lg lg:text-xl">{{ config.HERO.subtitle }}</p>
            <p className="max-w-2xl mb-6 lg:mb-8 md:text-lg lg:text-xl font-bold text-text-emph"> {{ article_count }} {{ "article" if article_count == 1 else "articles" }}, {{ word_count }} words</p>
            {% if config.HERO.cta_type == 'random' %}
            <RandomLink articles={ {{random_content_paths}} } className="inline-flex items-center justify-center px-5 py-3 text-lg text-center font-bold rounded-lg bg-button hover:bg-button-hover focus:ring-4 focus:ring-gray-100">
                {{ config.HERO.cta_text }}
            </RandomLink>
            {% else %}
            <Link href="{{ config.HERO.cta_link }}" className="inline-flex items-center justify-center px-5 py-3 text-lg text-center font-bold rounded-lg bg-button hover:bg-button-hover focus:ring-4 focus:ring-gray-100">
                {{ config.HERO.cta_text }}
            </Link>
            {% endif %} 
        </div>
        <div className="hero-image hidden lg:mt-0 lg:col-span-5 lg:flex">
            <div className="w-[300px] h-[300px] bg-cover"/>
        </div>                
    </div>
</section>

<div className="pt-6 space-y-6">

    <section className="pt-2 pb-4">

        <h1 id="book-list">{{ config.TERMINOLOGY.book_singular|title }} List</h1>

        <ul className="space-y-4 list-disc">
            {% for book in book_list %}
                <li>
                    <div className="flex items-center">
                        <p className="text-xl">
                            <ProminentLink href="{{book['path']}}" internal>
                            {{ book['name'] }}
                            </ProminentLink>
                        </p>
                        <p className="hidden xs:flex flex-wrap gap-x-2 gap-y-1 pl-2 align-middle h-fit">
                            {% for tag in book['tags'] %}
                                <span className="h-min">
                                <Badge color="{{tag['colour']}}">{{tag['name']}}</Badge>
                                </span>
                            {% endfor %}
                        </p>
                    </div>
                    <p className="text-sm text-text-secondary pt-2">
                        Last updated
                        {{ book['mod_date_time'] }}
                    </p>
                </li>
            {% endfor %}
        </ul>

    </section>

    <section>
        <h1 id="faq">Frequently Asked Questions</h1>

        <div className="flex flex-col divide-y divide-border-strong">
            {% for faq_item in config.FAQ %}
            <details className="faq-question">
                <summary>{{ faq_item.question }}</summary>
                <div>
                    {{ faq_item.answer }}
                </div>
            </details>
            {% endfor %}
        </div>
    </section>

    <p className="text-sm text-text-secondary">The opengraph image, and hero image on sanctum theme, is adapted from <DiscreetLink href="https://inkscape.org/~Inkonic/%E2%98%85inkscapes-path-artists-blossom">"Artist's blossom"</DiscreetLink> by Inkonic, licensed under <DiscreetLink href="https://creativecommons.org/licenses/by-sa/4.0/">CC BY-SA 4.0</DiscreetLink>.</p>

</div>